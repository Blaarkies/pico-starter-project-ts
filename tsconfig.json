{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "paths": {
            "common/*": [
                "./src/common/*"
            ],
            "network/*": [
                "./src/network/*"
            ],
            "devices/*": [
                "./src/devices/*"
            ],
            "state/*": [
                "./src/state/*"
            ]
        },
        "resolveJsonModule": true
    }
}
