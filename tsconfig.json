{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "es2021"
        ],
        "paths": {
            "common/*": [
                "./src/common/*"
            ],
            "communication/*": [
                "./src/communication/*"
            ],
            "devices/*": [
                "./src/devices/*"
            ],
            "state/*": [
                "./src/state/*"
            ]
        },
        "resolveJsonModule": true
    }
}
